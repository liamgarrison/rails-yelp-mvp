<h1><%= @restaurant.name %></h1>
<h3>Address:</h3>
<p><%= @restaurant.address %></p>
<h3>Phone number:</h3>
<p><%= @restaurant.phone_number %></p>
<h3>Category:</h3>
<p><%= @restaurant.category %></p>

<h2>Reviews</h2>

<% @restaurant.reviews do |review| %>
  <%= review.content %>
  <%= review.rating %>
<% end %>

